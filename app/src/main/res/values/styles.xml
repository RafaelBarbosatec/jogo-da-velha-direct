<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>


    <declare-styleable name="JogoDaVelha">
        <attr name="corDaBarra" format="color"/>
        <attr name="larguraDaBarra" format="dimension"/>
    </declare-styleable>

    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@android:color/black</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">#FFFFFF</item>
        <!-- Used for the background
        <item name="android:background">@color/secondColor</item>-->
    </style>

    <style name="dialog_animation">
        <item name="android:windowEnterAnimation">@anim/dialog_roll_from_down</item>

        <item name="android:windowExitAnimation">@anim/dialog_roll_to_down</item>


    </style>

</resources>
