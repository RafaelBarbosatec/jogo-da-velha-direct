<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mutationmob.jogodavelha.activitys.MenuActivity">

    <LinearLayout
        android:id="@+id/ll_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/ic_launcher"
            android:layout_marginBottom="20dp"/>
        <Button
            android:id="@+id/bt_criar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:textColor="@android:color/white"
            android:onClick="criarGame"
            android:background="@drawable/button"
            android:text="Criar Jogo"/>
        <Button
            android:id="@+id/bt_buscar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="50dp"
            android:background="@drawable/button"
            android:layout_marginRight="50dp"
            android:onClick="buscarGame"
            android:text="Buscar Jogo"/>
    </LinearLayout>

    <ImageButton
        android:id="@+id/bt_help"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:src="@drawable/ic_help_black_24dp"
        android:background="@android:color/transparent"
        android:layout_alignParentRight="true"/>

</RelativeLayout>
